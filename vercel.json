{
  "version": 2,
  "builds": [
    {
      "src": "attendance_system/asgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    }
  ],
  "installCommand": "apt-get update && apt-get install -y libpq-dev && pip install --no-cache-dir -r requirements.txt",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "attendance_system/asgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "attendance_system/asgi.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "PYTHONPATH": "./attendance_system"
  }
}
